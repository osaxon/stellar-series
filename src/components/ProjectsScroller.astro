---
import { type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";
type Project = CollectionEntry<"project">;
let projects: Project[] = await getCollection("project");
projects = [...projects, ...projects];
---

<section class="relative projects-container full-width scroll-x mb-12">
    <ul role="list" class="projects">
        {
            projects &&
                projects.map((project) => {
                    return (
                        <li class="flex-shrink-0 border-2 border-primary-100 rounded-lg bg-primary-50 p-4 w-[calc(220px+8vw)] flex items-center justify-center">
                            <Image
                                src={project.data.image ?? ""}
                                width={800}
                                height={450}
                                alt=""
                                class="aspect-video object-contain"
                            />
                        </li>
                    );
                })
        }
    </ul>
</section>
