---
type Link = {
    label: string;
    href: string;
};
import ThemeToggle from "./ThemeToggle.tsx";
const { pathname } = Astro.url;
---

<header class="py-2 content-grid" transition:animate="none">
    <div class="flex breakout justify-between items-center">
        <ThemeToggle client:load />
        {
            pathname !== "/" && (
                <nav class="flex items-end gap-2 font-heading text-paragraph">
                    <a class="hover:text-accent" href="/" aria-label="Home">
                        Home
                    </a>
                </nav>
            )
        }

        <!-- Social Links -->
        <div class="flex gap-4">
            <!-- GitHub SVG Icon -->
            <a
                aria-description="link to github profile"
                aria-label="github"
                class="group justify-self-end"
                href="https://github.com/osaxon"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="28"
                    height="28"
                    class="fill-text"
                >
                    <path
                        d="M12 0C5.373 0 0 5.373 0 12c0 5.303 3.438 9.8 8.207 11.387.6.11.793-.262.793-.58 0-.287-.01-1.044-.015-2.052-3.338.724-4.042-1.61-4.042-1.61C4.59 18.28 3.48 17.7 3.48 17.7c-1.086-.744.084-.728.084-.728 1.205.086 1.838 1.24 1.838 1.24 1.07 1.833 2.805 1.303 3.488.998.108-.776.415-1.303.755-1.603-2.65-.3-5.42-1.324-5.42-5.896 0-1.304.465-2.373 1.235-3.208-.122-.302-.54-1.518.118-3.16 0 0 1-.32 3.3 1.225a11.497 11.497 0 0 1 3.04-.407c1.027.003 2.057.138 3.04.407 2.998-1.545 3.318-1.225 3.318-1.225.66 1.642.24 2.858.12 3.16.77.835 1.234 1.904 1.234 3.208 0 4.584-2.775 5.592-5.432 5.885.428.367.807 1.096.807 2.206 0 1.592-.015 2.868-.015 3.26 0 .322.186.695.8.578C20.565 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12"
                    ></path>
                </svg>
            </a>

            <!-- LinkedIn Icon -->
            <a
                aria-description="link to linkedin profile"
                aria-label="linkedin"
                class="group justify-self-end"
                href="https://linkedin.com/"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="28"
                    height="28"
                    class="fill-text"
                >
                    <path
                        d="M21.75 0H2.25A2.25 2.25 0 0 0 0 2.25v19.5A2.25 2.25 0 0 0 2.25 24h19.5A2.25 2.25 0 0 0 24 21.75V2.25A2.25 2.25 0 0 0 21.75 0zM7.5 20.25H4.5V9h3v11.25zM6 7.5a2.25 2.25 0 1 1 2.25-2.25A2.25 2.25 0 0 1 6 7.5zM20.25 20.25h-3v-4.5c0-1.125-.02-2.556-1.568-2.556-1.568 0-1.807 1.22-1.807 2.478v4.578h-3V9h2.925v1.313h.039c.408-.772 1.41-1.588 2.889-1.588 3.078 0 3.639 2.03 3.639 4.674v5.251z"
                    ></path>
                </svg>
            </a>
        </div>
    </div>
</header>
