---
type Link = {
    label: string;
    href: string;
};
import { IconOne } from "./svgs/IconOne";
const { title, links } = Astro.props as { title: Link; links: Link[] };
---

<header class="py-2" transition:animate="none">
    <nav class="flex justify-between max-w-5xl mx-auto px-[var(--space-md)]">
        <a class="group" href="/">
            <IconOne />
        </a>
        <button id="themeToggleBtn">Toggle Theme</button>
        <div class="flex gap-4">
            <!-- GitHub SVG Icon -->
            <a class="group justify-self-end" href="https://github.com/osaxon">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="38"
                    height="38"
                    class="icon-fill-1"
                >
